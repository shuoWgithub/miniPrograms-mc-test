<view class="center-page">
    <view class="user-info"  bindtap="toInfo">
        <image mode="aspectFill" src="{{userInfo.avatar}}"></image>
        <view class="user-name">
            <view class="mc-text-bolder">{{userInfo.name}}</view>
            <view class="mc-text-gary">{{userInfo.tel}}</view>
        </view>
        <image src="/images/icon_more.png"></image>
    </view>
    <view>
        <view class="module-cell" bindtap="toOrder">
            <text>我的订单</text>
            <image src="/images/icon_more.png"></image>
        </view>
        <view class="module-cell" bindtap="toCollection">
            <text>我的收藏</text>
            <image src="/images/icon_more.png"></image>
        </view>
        <view class="module-cell" bindtap="toFollow">
            <text>我的关注</text>
            <image src="/images/icon_more.png"></image>
        </view>
    </view>
    <view>
        <view class="module-cell">
            <text>关注我们</text>
            <image src="/images/icon_more.png"></image>
        </view>
    </view>
</view>
