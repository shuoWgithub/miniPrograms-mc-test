<view class='wrapper'>
  <view class='top' bindtap='loadImg'>
    <view>
      <text >更换头像</text>
    </view>
  </view>
  <view class='photo'>
    <image src='{{imgUrl}}' bindload="onImageLoad" style='width: 100%;height: {{height}}px'/>

    <canvas canvas-id='cutImg' class='canvas' style='width: {{canvasWidth - 2}}px;height: {{canvasWidth}}px'></canvas>
  </view>
  <view class='bottom'>
    <view bindtap='cut'>确认修改</view>
  </view>


  <image src='{{cutImgPath}}'  style='width: 200px;height: 200px'/>
</view>